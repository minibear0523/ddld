extends layout

block content
  .main-banner.prod
    .container
      h2
        span 招商产品
  .main-container
    ul#products-filter.list-unstyled.list-inline
      li
        a.active(href='#', data-group='all') 全部
      li
        a(href='#', data-group='psychiatric') 精神类药
      li
        a(href='#', data-group='creative') 经皮系统给药
      li
        a(href='#', data-group='children') 儿童药
      li
        a(href='#', data-group='generics') 仿制药
    ul#products-grid.row.grid
      - for (var i = 0; i < products.length; i++)
        - var product = products[i]
        li.col-md-4.col-sm-6.col-xs-12.products-grid(data-groups='#{product.sub_kind_string}')
          .product-box
            .inner
              .limit-line.product
                .limit-line.title
                  h4 #{product.name}
                .designation
                  p #{product.name_co}
                p.divider
                  i.fa.fa-plus-square
                p.limit-line.four
                  | #{product.abstract}
            a.btn.btn-secondary(href='/products/detail/merchant/#{product.id}')
              | 查看详情 
              i.fa.fa-arrow-circle-right

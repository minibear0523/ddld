extends layout
block css-external
  link(rel='stylesheet', href='/plugins/jquery-file-uploader/css/jquery.fileupload.css')
  link(rel='stylesheet', href='/plugins/jquery-file-uploader/css/jquery.fileupload-ui.css')
  link(rel='stylesheet', href='/dashboard/css/intro.css')
block content
  .content-wrapper
    section.content-header
      h1
        | 多媒体管理
        small  添加 & 修改
      ol.breadcrumb
        li
          a(href='/dashboard/home')
            i.fa.fa-dashboard
            |  首页
        li.active 多媒体管理
    section.content
      .row
        .col-xs-12.col-md-12
          .box
            .box-header
              h3.box-title 视频管理
            .box-body
      .row
        .col-xs-12.col-md-12
          .box
            .box-header
              h3.box-title 图片列表
              a.pull-right.btn-box-tool(data-toggle='modal', data-target='#imagesModal')
                  i.fa.fa-plus
            .box-body
              .row.margin-bottom
                - for (var i = 0; i < images.length; i++)
                  .col-sm-4.col-xs-6
                    .hover-content
                      img.img-responsive(src='#{images[i]}')
                      .overlay
                        a#delete-image-btn.btn.btn-secondary.zoom(href='#{images[i]}')
                          i.fa.fa-close

            #imagesModal.modal.modal-info.fade(tabindex='-1', role='dialog', aria-labelledby='#imagesModalLabel')
              .modal-dialog(role='document')
                .modal-content
                  .modal-header
                    button.close(type='button', data-dismiss='modal', aria-label='关闭')
                      span(aria-hidden='true') &times;
                    h4.modal-title 添加新图片
                  .modal-body
                    form#fileupload.form-horizontal
                      .form-group
                        .col-md-offset-5
                          span.btn.btn-success.btn-flat.fileinput-button
                            i.fa.fa-plus
                            | 选择文件
                            input(type='file', name='file')
                  .modal-footer
                    button.btn.btn-outline.pull-left(type='button', data-dismiss='modal') 关闭
                    button.btn.btn-outline(type='button') 上传

block js-external
  script(src='/plugins/jquery-file-uploader/js/vendor/jquery.ui.widget.js')
  script(src='/plugins/jquery-file-uploader/js/jquery.iframe-transport.js')
  script(src='/plugins/jquery-file-uploader/js/jquery.fileupload.js')
  script(src='/plugins/jquery-file-uploader/js/jquery.fileupload-image.js')
  script(src='/plugins/jquery-file-uploader/js/jquery.fileupload-ui.js')
  script(src='/dashboard/js/intro.js')
  

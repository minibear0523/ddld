doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title 大道隆达管理系统登录
    meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
    link(rel='stylesheet', href='/plugins/bootstrap/stylesheets/bootstrap.min.css')
    link(href='/plugins/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(rel='stylesheet', href='https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css')
    link(rel='stylesheet', href='/dashboard/css/AdminLTE.min.css')
    // [if lt IE 9]
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    // [endif]
    
  body.hold-transition.login-page
    .login-box
      .login-logo
        a(href='/')
          b 大道隆达
          | 医药科技发展有限公司
      .login-box-body
        p.login-box-body 登录管理系统
        form(action='/users/login', method='POST')
          .form-group.has-feedback
            input.form-control(type='text', placeholder='用户名', name='username')
            span.glyphicon.glyphicon-user.form-control-feedback
          .form-group.has-feedback
            input.form-control(type='password', placeholder='密码', name='password')
            span.glyphicon.glyphicon-lock.form-control-feedback
          .row
            .col-xs-8
            .col-xs-4
              input.btn.btn-primary.btn-block.btn-flat(type='submit', value='登录')
    script(src='/plugins/jQuery/jquery-1.11.3.min.js')
    script(src='/plugins/bootstrap/javascripts/bootstrap.min.js')
    
